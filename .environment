# Configure virtual env wrapper
export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python3.8
export VIRTUALENVWRAPPER_VIRTUALENV=~/.local/bin/virtualenv
export WORKON_HOME=~/.virtualenvs

# Configure command prompt
export PS1="\W\[\033[37m\]\$(parse_git_branch)\[\033[00m\] $ "

# Configure Path
export PATH=$HOME/.local/bin:$PATH

# Docker doesnt run in WSL due to the lack of kernel namespacing but as as
# workaround you can run docker for windows and expose the docker daemon on localhost:2375
export DOCKER_HOST=tcp://localhost:2375

